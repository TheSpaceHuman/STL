section.special-offer
    .vertical-line
    .container-fluid
        .container
            h2.title-2 Специальное предложение
            .goods-slider
                - for (var x = 0; x < 9; x++)
                    div
                        .goods-slider_item
                            .icon-slider-sale
                            .goods-slider_top-text
                                a(href="#")
                                    .goods-slider_top-text_title Кровать металлическая
                                    .goods-slider_top-text_intro-title двухъярусная Эконом
                            .goods-slider_img
                                a(href="#")
                                    img(data-src="img/index/slider-goods/2.png" alt="good").lazyload
                            .goods-slider_price
                                p.old-price от <span>1200</span> <i class="fas fa-ruble-sign"></i>
                                p.main-price от <span>960</span> <i class="fas fa-ruble-sign"></i>
                            .goods-slider_description
                                p основание: труба 40х20 мм сварная сетка - ячейки 100x100
                                .goods-slider_description_hiden
                                    p спинка: ЛДСП 16 мм
                                    p соединение болтовое
                                    p два усилителя
                            .goods-slider_controls
                                p Опт от
                                input.counter(type="text" value="10" placeholder="10")
                                .goods-slider_controls_counter
                                    button.btn-plus
                                    button.btn-minus
                                button.btn.btn-dark-red.shop

